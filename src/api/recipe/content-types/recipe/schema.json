{
  "kind": "collectionType",
  "collectionName": "recipes",
  "info": {
    "singularName": "recipe",
    "pluralName": "recipes",
    "displayName": "Recipe",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "type": {
      "type": "customField",
      "options": [
        "Vegetarian: צמחוני",
        "Vegan: טבעוני",
        "Meaty: בשרי",
        "Dietetic: דיאטטי",
        "Family-Friendly: משפחתי",
        "Quick and Easy: מהיר וקל"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "Allergens": {
      "type": "customField",
      "options": [
        "Nuts: אגוזים",
        "Milk: חלב",
        "Gluten: גלוטן",
        "Eggs: ביצים",
        "Soy: סויה",
        "Fish: דגים",
        "Crustaceans: קרוסטציאנים",
        "Celery: סלרי",
        "Mustard: חרדל (Note: \"סולר\" might have been intended to be \"חרדל\" which is mustard, as \"סולר\" typically refers to diesel fuel)",
        "Sesame: שומשום",
        "Wheat: חיטה",
        "Pistachio: פיסטוק",
        "Almonds: שקדים",
        "Peanuts: בוטנים",
        "Coconut: קוקוס",
        "Legumes: קטניות"
      ],
      "customField": "plugin::multi-select.multi-select"
    },
    "About_recipe": {
      "type": "richtext"
    },
    "select_Nutritional_values": {
      "displayName": "nutritional_values",
      "type": "component",
      "repeatable": false,
      "component": "nutritional-values.nutritional-values"
    },
    "difficulty": {
      "type": "string"
    }
  }
}
